<% layout("./layouts/boilerplate") %>
        <div class="wrapper">
            <div class="container mb-2">
                <h3 class="title"> <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor"
                        class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                        <path
                            d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                    </svg> Edit Employee Info</h3>
                <form id="edit-employee-form" action="/employees/<%=employee._id %>?_method=PATCH" method="POST"
                    class="needs-validation" novalidate>
                    <div class="mt-2">
                        <label for="ID">ID</label>
                        <input type="text" class="form-control" name="employee[ID]" id="ID" value="<%= employee._id %>" readonly>
                    </div>
                    <div class="mt-2">
                        <label for="Name">Full Name</label>
                        <input type="text" class="form-control" name="employee[Name]" id="Name" value="<%= employee.Name %>"
                            required>
                            <div class="invalid-feedback">
                                This field is required
                            </div>
                    </div>
                    <div class="mt-2">
                        <label for="Email">Email address</label>
                        <input type="email" class="form-control" name="employee[Email]" id="Email" value="<%= employee.Email %> "
                            required>
                            <div class="invalid-feedback">
                                This field is required
                            </div>
                    </div>
                    <div class="mt-2">
                        <label for="Profession">Profession</label>
                        <input type="text" class="form-control" name="employee[Profession]" id="Profession"
                            value="<%= employee.Profession %> " required>
                            <div class="invalid-feedback">
                                This field is required
                            </div>
                    </div>
                    <div class="mt-2">
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" name="employee[Address]" id="Address"
                            value="<%= employee.Address %> " required>
                            <div class="invalid-feedback">
                                This field is required
                            </div>
                    </div>
                    <div class="mt-2">
                        <label for="Education">Education</label>
                        <input type="text" class="form-control" name="employee[Education]" id="Education"
                            value="<%= employee.Education %> " required>
                            <div class="invalid-feedback">
                                This field is required
                            </div>
                    </div>
                    <div class="mt-2">
                        <label for="Gender">Gender</label>
                        <select class="form-select" aria-label="Default select example" id="Gender" name="employee[Gender]"
                            required>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <div class="ininvalid-feedback">
                            Please choose a gender
                        </div>
                    </div>
                    <button class="btn btn-success">Save</button>
                </form>
                <form action="/employees/<%=employee._id %>?_method=DELETE" method="POST">
                    <button id="fireBtn" class="btn btn-danger">Fire Employee</button>
                </form>
            </div>
        </div>